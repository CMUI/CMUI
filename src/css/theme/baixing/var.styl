
////////////////////  bx - var  ////////////////////

/* --------------------------------------------- */
/** color **/
$cm-color-link = #00aaf1
$cm-color-highlight = #ff9833
$cm-color-primary = #ff4466

// stage color
$cm-color-stage = #f2f2f2
$cm-color-stage-backdrop = #999

// extra colors
$cm-color-fg-minor = #666
$cm-color-fg-light = #999

$cm-color-splitter = #e6e6e6

// interaction colors for white elements
$cm-color-hover = #f6f6f6
$cm-color-active = #eee

/* --------------------------------------------- */
/** visual **/
$cm-border-radius = 5px


/* --------------------------------------------- */
/** text **/
$cm-font-size = 14px
$cm-font-size-s = $cm-font-size - 2
$cm-font-size-l = $cm-font-size + 2
$cm-font-size-xl = $cm-font-size + 4

