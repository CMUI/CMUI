
////////////////////  bx - text  ////////////////////
-cm-core-text()

/* --------------------------------------------- */
/** theme **/
bx-headline()
	font-size $bx-fs-headline
	font-weight inherit
	line-height $cm-line-height-text
bx-headline-minor()
	font-size $bx-fs-headline-minor
	font-weight 700
	line-height $cm-line-height-text
bx-text()
	font-size $cm-font-size
	line-height $cm-line-height-text
bx-text-minor()
	font-size $bx-fs-text-minor
	line-height $cm-line-height-text


/* --------------------------------------------- */
/** label **/
$cm-label-border-radius = 0.25em
$cm-label-padding-h = 0.2em

.cmLabel
	display inline-block
	padding 0.1em $cm-label-padding-h 0 $cm-label-padding-h
	font-size $cm-font-size
	line-height $cm-line-height-min
	white-space nowrap
	border 1px solid
	border-radius $cm-label-border-radius

	// size
	small&
	&.cmLabelXSmall
		font-size ($cm-font-size - 4)
	&.cmLabelSmall
		font-size ($cm-font-size - 2)
	&.cmLabelLarge
		font-size ($cm-font-size + 2)
	&.cmLabelXLarge
		font-size ($cm-font-size + 4)

	// style
	&.cmLabelSolid
		background-color currentColor
		-webkit-text-fill-color white


/* --------------------------------------------- */
/** info box **/
$cm-info-box-color-bg = $cm-color-stage
$cm-info-box-color-border = $cm-color-splitter
.cmInfoBox
	margin-top 10px
	margin-bottom 10px
	padding $cm-content-padding
	background-color $cm-info-box-color-bg
	border 1px solid $cm-info-box-color-border
	border-radius $cm-border-radius

	p, div, label
		+ .cmBtn
			margin-top 5px

