-cm-core-text()

/* --------------------------------------------- */
/** label **/
$cm-label-border-radius = 0.25em
$cm-label-padding-h = 0.1em

.cmLabel
	display inline-block
	padding 0.1em $cm-label-padding-h 0 $cm-label-padding-h
	font-size $cm-font-size
	line-height $cm-line-height-min
	white-space nowrap
	border 1px solid
	border-radius $cm-label-border-radius

	// size
	small&
	&.cmLabelSmall
		font-size $cm-font-size-s
	&.cmLabelLarge
		font-size $cm-font-size-l
	&.cmLabelXLarge
		font-size $cm-font-size-xl

	// style
	&.cmLabelSolid
		background-color currentColor
		-webkit-text-fill-color white
