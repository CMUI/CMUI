/** selector **/
$sel-input-text = 'input[type=text], input[type=password], input[type=search], input[type=email], input[type=number], input[type=tel]'
$sel-input-option = 'input[type=checkbox], input[type=radio]'
$sel-btn = 'input[type=button], input[type=submit], button'

/* --------------------------------------------- */
/** color **/
$color-bg ?= #efeff4
$color-bg-ui ?= #bdbdc2
$color-bg-text ?= white

$color-fg-minor ?= #000
