$color-fg-dark ?= #000
$color-fg-highlight ?= #FF8000

$color-link ?= #015EE7


/* --------------------------------------------- */
/** visual **/
$border-radius ?= 5px


/* --------------------------------------------- */
/** text **/
$font-size ?= 16px
