
////////////////////  common  ////////////////////
-cm-core-common($htmlBg = $cm-color-bg, $bodyBg = $cm-color-bg)
	/* --------------------------------------------- */
	/** layout **/
	html
		height 100%
		overflow-y scroll
		background-color $htmlBg

	body
		min-height 100%
		font $cm-font-size/$cm-line-height $cm-font-family
		color $cm-color-fg
		background-color $bodyBg

	/* --------------------------------------------- */
	/** basic style **/

	// tap highlight
	html, body, a.off
		-webkit-tap-highlight-color transparent
	input, textarea, select, label[for], a
		-webkit-tap-highlight-color rgba(0, 0, 0, 0.3)

	// link
	a
		color $cm-color-link

	// phone link
	html.desktop a[href^="tel:"]
		color inherit
		text-decoration inherit
		pointer-events none
		cursor text
		cursor not-allowed

	// context menu
	a[data-action]
		-webkit-touch-callout none

	// scroll-box
	.cm-scroll-box
		overflow-x hidden
		overflow-y auto
		-webkit-overflow-scrolling touch
