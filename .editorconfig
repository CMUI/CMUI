# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{package,bower}.json]
indent_style = space
indent_size = 2

[*.{html}]
quote_type = double

[*.md]
# use `<br>` to insert a line break explicitly.
; trim_trailing_whitespace = false
